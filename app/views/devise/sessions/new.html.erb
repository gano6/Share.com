
<div class="container_devise">
  <div class="devise_frame">
    <p class="devise_title">ログイン</p>
    <div class="devise_inner">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="field">
          <%= f.email_field :email, placeholder: "メールアドレス" ,autofocus: true, class: "form-control", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: "パスワード", class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label "パスワードを保存する" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン" ,class: "btn btn-primary"%>
        </div>
      <% end %>

      <a href="/users/sign_up">新しいアカウントを作成</a>
    </div>
  </div>
</div>