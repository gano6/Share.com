<div class="container-fluid reservations">
  <h4 class="pb-4">予約済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center"> 
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>合計料金</th>
        <th>開始日</th>
        <th>終了日</th>
        <th>予約確定日時</th>
      </tr>
    </thead>
    <tbody>
      <% @reservations.each do |reservation| %>
        <tr align="center">
          <td class="room-posts-image"><%= image_tag reservation.room.image.url, width: '240px', height: '140px' %></td>
          <td class="posts-name">
           <%= link_to "#{reservation.room.name}", "/rooms/#{reservation.room.id}"  %>
          </td>
          <td class="posts-content"><%= reservation.room.introduction%></td>
          <td class="price-icon"><%= (reservation.room.price * reservation.person_num * ((reservation.end_date - reservation.start_date).to_i)).to_i %></td>
          <td><%= l reservation.start_date %></td>
          <td><%= l reservation.end_date %></td>
          <td><%= l reservation.created_at, format: :short %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>