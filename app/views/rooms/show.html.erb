<!-- ルーム詳細ページ -->
<div class="container room-show">
  <div class="row">
    <div class="col-md-8">
      <div class="room-show-image"><%= image_tag @room.image.url %></div>
      <div class="room-show-detile">
        <div class="room-show-detile-icon">
          <a href="/">
            <%= image_tag @user.icon_image.url, width: '65px', height: '65px', class: "host-icon"%>
          </a>
        </div>
        <div class="room-show-profile">
          <p class="room-show-profile-name"><%= @room.name %></p>
          <p class="room-show-profile-address"><%= @room.address %></p>
        </div>
      </div>
      <p class="room-show-detile-content"><%= @room.introduction %></p>
    </div>
    <div class="col-md-4">
      <div class="room-show-nav">
        <h5 class="price-icon"><%= @room.price %> / 日</h5>
        <div class="room-show-date-select">
          <%= form_with model: @reservation, url: reservations_new_path(room_id: @room.id), local: true do |f| %>
            <%= f.hidden_field :user_id, value: current_user.id %>
            <%= f.hidden_field :room_id, value: @room.id %>
            <%= f.hidden_field :reservation_id, value: @reservation.id %>
            
            <%= f.label :start_date, "開始日" %>
            <%= f.date_field :start_date, value: @reservation.start_date, class: "form-control mb-4" %>
  
            <%= f.label :end_date, "終了日" %>
            <%= f.date_field :end_date, value: @reservation.end_date, class: "form-control mb-4" %>
            
            <%= f.label :person_num, "人数" %>
            <%=  f.number_field :person_num, value: @reservation.person_num, placeholder: "人数を入力", class: "form-control mb-4" %>
            
            <%= f.submit "予約する", class: "btn btn-primary form-control" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>