<div class="container-fluid room-posts">
  <h4 class="pb-4">登録済みルーム一覧</h4>
  <table>
    <thead>
      <tr align="center"> 
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>
    <tbody>
      <% @rooms.each do |room| %>
        <tr align="center">
          <td class="room-posts-image"><%= image_tag room.image.url, width: '240px', height: '140px' %></td>
          <td class="posts-name">
            <%= link_to "#{room.name}", "/rooms/#{room.id}"  %>
          </td>
          <td class="posts-content"><%= room.introduction%></td>
          <td class="price-icon"><%= room.price%></td>
          <td><%= l room.created_at, format: :short %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>